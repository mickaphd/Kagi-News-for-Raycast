{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kagi-news",
  "title": "Kagi News",
  "description": "Browse news and sources from Kagi News",
  "icon": "extension-icon.png",
  "author": "mickaphd",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "News"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mickaphd/Kagi-News-for-Raycast"
  },
  "commands": [
    {
      "name": "kagi-news",
      "title": "Browse Kagi News",
      "description": "Browse news and sources from Kagi News",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "language",
      "type": "dropdown",
      "required": false,
      "title": "Language",
      "description": "Article language",
      "default": "default",
      "data": [
        { "title": "Default (Source Language)", "value": "default" },
        { "title": "English", "value": "en" },
        { "title": "Español", "value": "es" },
        { "title": "Français", "value": "fr" },
        { "title": "Deutsch", "value": "de" },
        { "title": "Italiano", "value": "it" },
        { "title": "Português", "value": "pt" },
        { "title": "Português (Brasil)", "value": "pt-BR" },
        { "title": "日本語", "value": "ja" },
        { "title": "한국어", "value": "ko" },
        { "title": "中文 (简体)", "value": "zh-Hans" },
        { "title": "中文 (繁體)", "value": "zh-Hant" },
        { "title": "Nederlands", "value": "nl" },
        { "title": "Polski", "value": "pl" },
        { "title": "Русский", "value": "ru" },
        { "title": "Svenska", "value": "sv" },
        { "title": "Suomi", "value": "fi" },
        { "title": "Norsk", "value": "nb" },
        { "title": "Türkçe", "value": "tr" },
        { "title": "ไทย", "value": "th" },
        { "title": "Українська", "value": "uk" },
        { "title": "Català", "value": "ca" },
        { "title": "हिन्दी", "value": "hi" },
        { "title": "العربية", "value": "ar" },
        { "title": "עברית", "value": "he" },
        { "title": "Lëtzebuergesch", "value": "lb" }
      ]
    },
    {
      "name": "showImages",
      "type": "checkbox",
      "required": false,
      "title": "More Options",
      "description": "Display the article 'primary image'",
      "default": true,
      "label": "Show images"
    },
    {
      "name": "showTalkingPoints",
      "type": "checkbox",
      "required": false,
      "description": "Display the 'Talking Points' section",
      "default": true,
      "label": "Show talking points"
    },
    {
      "name": "showDidYouKnow",
      "type": "checkbox",
      "required": false,
      "description": "Display the 'Did You Know' section",
      "default": true,
      "label": "Show did you know"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.4",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}